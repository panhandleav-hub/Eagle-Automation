<Window x:Class="EagleAutomation.Views.EventsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Events - Eagle Automation"
        Height="800" Width="1400"
        Style="{StaticResource DarkWindow}"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1F1F1F" BorderBrush="#3C3C3C" BorderThickness="0,0,0,1" Padding="20">
            <TextBlock Text="Events - Coming Soon" FontSize="20" FontWeight="SemiBold" Foreground="White"/>
        </Border>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Events Window" FontSize="32" Foreground="#888" Margin="0,0,0,20"/>
            <TextBlock Text="This window will contain timeline events and cue management" FontSize="16" Foreground="#666" TextAlignment="Center"/>
            <TextBlock Text="Including markers, cues, and automation events" FontSize="14" Foreground="#555" Margin="0,10,0,0" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>

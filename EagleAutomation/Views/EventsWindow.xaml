<Window x:Class="EagleAutomation.Views.EventsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Events - Eagle Automation"
        Height="900" Width="1600"
        Style="{StaticResource DarkWindow}"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title Bar -->
            <RowDefinition Height="Auto"/> <!-- Navigation -->
            <RowDefinition Height="*"/>    <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#1F1F1F" BorderBrush="#3C3C3C" BorderThickness="0,0,0,1" Padding="30,20">
            <TextBlock Text="Events - Eagle Automation"
                      FontSize="24"
                      FontWeight="SemiBold"
                      Foreground="White"/>
        </Border>

        <!-- Navigation Tabs -->
        <Border Grid.Row="1" Background="#2D2D30" BorderBrush="#3C3C3C" BorderThickness="0,0,0,1" Padding="30,15">
            <StackPanel Orientation="Horizontal">
                <Button Content="Console" Style="{StaticResource NavButton}"/>
                <Button Content="Mix Edit" Style="{StaticResource NavButton}"/>
                <Button Content="Events" Style="{StaticResource NavButton}" IsEnabled="False" Background="#0078D4" Foreground="White"/>
                <Button Content="Track Sheet" Style="{StaticResource NavButton}"/>
                <Button Content="Preferences" Style="{StaticResource NavButton}"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Timeline Section -->
                <RowDefinition Height="*"/>    <!-- Event List Section -->
                <RowDefinition Height="Auto"/> <!-- Filter Section -->
            </Grid.RowDefinitions>

            <!-- Timeline Section -->
            <Border Grid.Row="0" Background="#2D2D30" CornerRadius="12" BorderBrush="#3C3C3C" BorderThickness="1" Padding="20" Margin="0,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="180"/>
                    </Grid.RowDefinitions>

                    <!-- Timeline Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="TIMELINE VIEW" Style="{StaticResource SectionHeader}" HorizontalAlignment="Left"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Zoom In" Style="{StaticResource SmallButton}" Margin="5,0"/>
                            <Button Content="Zoom Out" Style="{StaticResource SmallButton}" Margin="5,0"/>
                            <Button Content="Fit All" Style="{StaticResource SmallButton}" Margin="5,0"/>
                            <Button Content="Go to Current" Style="{StaticResource SmallButton}" Margin="5,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Timeline Display -->
                    <Border Grid.Row="1" Background="#1E1E1E" CornerRadius="8" BorderBrush="#3C3C3C" BorderThickness="1">
                        <Canvas>
                            <!-- Timeline markers and labels -->
                            <Line X1="0" Y1="0" X2="0" Y2="180" Stroke="#3C3C3C" StrokeThickness="1"/>
                            <TextBlock Text="00:00:00:00" Canvas.Left="5" Canvas.Top="5" Foreground="#666" FontFamily="Consolas" FontSize="10"/>

                            <Line X1="320" Y1="0" X2="320" Y2="180" Stroke="#3C3C3C" StrokeThickness="1"/>
                            <TextBlock Text="00:01:00:00" Canvas.Left="325" Canvas.Top="5" Foreground="#666" FontFamily="Consolas" FontSize="10"/>

                            <Line X1="640" Y1="0" X2="640" Y2="180" Stroke="#3C3C3C" StrokeThickness="1"/>
                            <TextBlock Text="00:02:00:00" Canvas.Left="645" Canvas.Top="5" Foreground="#666" FontFamily="Consolas" FontSize="10"/>

                            <Line X1="960" Y1="0" X2="960" Y2="180" Stroke="#3C3C3C" StrokeThickness="1"/>
                            <TextBlock Text="00:03:00:00" Canvas.Left="965" Canvas.Top="5" Foreground="#666" FontFamily="Consolas" FontSize="10"/>

                            <Line X1="1280" Y1="0" X2="1280" Y2="180" Stroke="#3C3C3C" StrokeThickness="1"/>
                            <TextBlock Text="00:04:00:00" Canvas.Left="1285" Canvas.Top="5" Foreground="#666" FontFamily="Consolas" FontSize="10"/>

                            <!-- Current time cursor (red line with arrow) -->
                            <Rectangle Canvas.Left="798" Canvas.Top="0" Width="3" Height="180" Fill="#FF3366">
                                <Rectangle.Effect>
                                    <DropShadowEffect Color="#FF3366" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                                </Rectangle.Effect>
                            </Rectangle>
                            <Polygon Canvas.Left="788" Canvas.Top="0" Points="0,0 6,10 12,0" Fill="#FF3366"/>

                            <!-- Example timeline events -->
                            <!-- Cue events (blue) -->
                            <Border Canvas.Left="160" Canvas.Top="30" Width="80" Height="30" Background="#0078D4" CornerRadius="4" Padding="6">
                                <Border.Effect>
                                    <DropShadowEffect Color="#0078D4" BlurRadius="15" ShadowDepth="4" Opacity="0.4"/>
                                </Border.Effect>
                                <TextBlock Text="Intro Start" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                            </Border>
                            <Border Canvas.Left="560" Canvas.Top="30" Width="90" Height="30" Background="#0078D4" CornerRadius="4" Padding="6">
                                <Border.Effect>
                                    <DropShadowEffect Color="#0078D4" BlurRadius="15" ShadowDepth="4" Opacity="0.4"/>
                                </Border.Effect>
                                <TextBlock Text="Verse Begin" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                            </Border>

                            <!-- Switch events (orange) -->
                            <Border Canvas.Left="400" Canvas.Top="70" Width="120" Height="30" Background="#FF9800" CornerRadius="4" Padding="6">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FF9800" BlurRadius="15" ShadowDepth="4" Opacity="0.4"/>
                                </Border.Effect>
                                <TextBlock Text="Mute CH 1-4" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                            </Border>
                            <Border Canvas.Left="880" Canvas.Top="70" Width="100" Height="30" Background="#FF9800" CornerRadius="4" Padding="6">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FF9800" BlurRadius="15" ShadowDepth="4" Opacity="0.4"/>
                                </Border.Effect>
                                <TextBlock Text="Solo CH 10" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                            </Border>

                            <!-- Snapshot events (green) -->
                            <Border Canvas.Left="240" Canvas.Top="110" Width="110" Height="30" Background="#00E676" CornerRadius="4" Padding="6">
                                <Border.Effect>
                                    <DropShadowEffect Color="#00E676" BlurRadius="15" ShadowDepth="4" Opacity="0.4"/>
                                </Border.Effect>
                                <TextBlock Text="Basic Mix" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                            </Border>
                            <Border Canvas.Left="1120" Canvas.Top="110" Width="100" Height="30" Background="#00E676" CornerRadius="4" Padding="6">
                                <Border.Effect>
                                    <DropShadowEffect Color="#00E676" BlurRadius="15" ShadowDepth="4" Opacity="0.4"/>
                                </Border.Effect>
                                <TextBlock Text="Full Mix" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                            </Border>
                        </Canvas>
                    </Border>
                </Grid>
            </Border>

            <!-- Event List Section -->
            <Border Grid.Row="1" Background="#2D2D30" CornerRadius="12" BorderBrush="#3C3C3C" BorderThickness="1" Padding="20" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="180"/>
                    </Grid.ColumnDefinitions>

                    <!-- Event Table -->
                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,20,0">
                        <DataGrid x:Name="EventsDataGrid"
                                 Background="#1E1E1E"
                                 Foreground="#E0E0E0"
                                 BorderThickness="0"
                                 AutoGenerateColumns="False"
                                 CanUserAddRows="False"
                                 CanUserDeleteRows="False"
                                 CanUserResizeRows="False"
                                 HeadersVisibility="Column"
                                 GridLinesVisibility="Horizontal"
                                 HorizontalGridLinesBrush="#3C3C3C"
                                 SelectionMode="Single"
                                 RowBackground="#1E1E1E"
                                 AlternatingRowBackground="#252526">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#1E1E1E"/>
                                    <Setter Property="Foreground" Value="#0078D4"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="Padding" Value="12"/>
                                    <Setter Property="BorderBrush" Value="#0078D4"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="TIMECODE" Width="120" Binding="{Binding Timecode}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#00FFFF"/>
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="TYPE" Width="120" Binding="{Binding Type}"/>
                                <DataGridTextColumn Header="ACTIONS / LABEL" Width="*" Binding="{Binding Description}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>

                    <!-- Action Buttons Panel -->
                    <StackPanel Grid.Column="1">
                        <Button Content="New Event" Style="{StaticResource PrimaryButton}" Margin="0,5"/>
                        <Button Content="Delete" Style="{StaticResource DangerButton}" Margin="0,5"/>
                        <Button Content="Duplicate" Style="{StaticResource SecondaryButton}" Margin="0,5"/>
                        <Button Content="Move" Style="{StaticResource SecondaryButton}" Margin="0,5"/>

                        <Border BorderBrush="#3C3C3C" BorderThickness="0,1,0,0" Margin="0,15,0,10" Padding="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="NUDGE" Foreground="#888" FontSize="11" FontWeight="Bold" Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" Content="◀" Style="{StaticResource SecondaryButton}" Margin="0,0,4,0" Padding="10" FontSize="16" FontWeight="Bold"/>
                                    <Button Grid.Column="1" Content="▶" Style="{StaticResource SecondaryButton}" Margin="4,0,0,0" Padding="10" FontSize="16" FontWeight="Bold"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Button Content="Find Event..." Style="{StaticResource SecondaryButton}" Margin="0,15,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Filter Section -->
            <Border Grid.Row="2" Background="#2D2D30" CornerRadius="12" BorderBrush="#3C3C3C" BorderThickness="1" Padding="20">
                <StackPanel>
                    <TextBlock Text="EVENT FILTERS" Foreground="#0078D4" FontSize="14" FontWeight="Bold"
                              BorderBrush="#0078D4" BorderThickness="0,0,0,2" Padding="0,0,0,10" Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Event Type Filter -->
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="EVENT TYPE" Style="{StaticResource FormLabel}" Margin="0,0,0,8"/>
                            <ComboBox Style="{StaticResource DarkComboBox}" SelectedIndex="0">
                                <ComboBoxItem Content="All Types"/>
                                <ComboBoxItem Content="Cues Only"/>
                                <ComboBoxItem Content="Switches Only"/>
                                <ComboBoxItem Content="Snapshots Only"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Item Filter -->
                        <StackPanel Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Text="ITEM" Style="{StaticResource FormLabel}" Margin="0,0,0,8"/>
                            <ComboBox Style="{StaticResource DarkComboBox}" SelectedIndex="0">
                                <ComboBoxItem Content="All Items"/>
                                <ComboBoxItem Content="Mute"/>
                                <ComboBoxItem Content="Solo"/>
                                <ComboBoxItem Content="EQ"/>
                                <ComboBoxItem Content="Faders"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Path Filter -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="PATH" Style="{StaticResource FormLabel}" Margin="0,0,0,8"/>
                            <ComboBox Style="{StaticResource DarkComboBox}" SelectedIndex="0">
                                <ComboBoxItem Content="All Paths"/>
                                <ComboBoxItem Content="Mix Path"/>
                                <ComboBoxItem Content="Chan Path"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                        <Button Content="Apply Filters" Style="{StaticResource SmallButton}" Margin="0,0,8,0"/>
                        <Button Content="Clear Filters" Style="{StaticResource SmallButton}" Margin="0,0,8,0"/>
                        <Button Content="Show All" Style="{StaticResource SmallButton}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>

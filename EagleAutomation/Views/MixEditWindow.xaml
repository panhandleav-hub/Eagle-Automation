<Window x:Class="EagleAutomation.Views.MixEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mix Edit - Eagle Automation"
        Height="800" Width="1400"
        Style="{StaticResource DarkWindow}"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title Bar -->
            <RowDefinition Height="Auto"/> <!-- Navigation -->
            <RowDefinition Height="*"/>    <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#1F1F1F" BorderBrush="#3C3C3C" BorderThickness="0,0,0,1" Padding="30,20">
            <TextBlock Text="Mix Edit - Eagle Automation"
                      FontSize="24"
                      FontWeight="SemiBold"
                      Foreground="White"/>
        </Border>

        <!-- Navigation Tabs -->
        <Border Grid.Row="1" Background="#2D2D30" BorderBrush="#3C3C3C" BorderThickness="0,0,0,1" Padding="30,15">
            <StackPanel Orientation="Horizontal">
                <Button Content="Console" Style="{StaticResource NavButton}"/>
                <Button Content="Mix Edit" Style="{StaticResource NavButton}" IsEnabled="False" Background="#0078D4" Foreground="White"/>
                <Button Content="Events" Style="{StaticResource NavButton}"/>
                <Button Content="Track Sheet" Style="{StaticResource NavButton}"/>
                <Button Content="Preferences" Style="{StaticResource NavButton}"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Automation Curves Area -->
            <Border Grid.Column="0" Background="#2D2D30" CornerRadius="12" BorderBrush="#3C3C3C" BorderThickness="1" Padding="20" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="AUTOMATION CURVES" Style="{StaticResource SectionHeader}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="Channel:" Style="{StaticResource FormLabel}" Margin="0,0,10,0"/>
                            <ComboBox Width="120" Style="{StaticResource DarkComboBox}" SelectedIndex="0">
                                <ComboBoxItem Content="CH 1"/>
                                <ComboBoxItem Content="CH 2"/>
                                <ComboBoxItem Content="CH 3"/>
                                <ComboBoxItem Content="All"/>
                            </ComboBox>
                            <TextBlock Text="Parameter:" Style="{StaticResource FormLabel}" Margin="20,0,10,0"/>
                            <ComboBox Width="150" Style="{StaticResource DarkComboBox}" SelectedIndex="0">
                                <ComboBoxItem Content="Fader Level"/>
                                <ComboBoxItem Content="Pan"/>
                                <ComboBoxItem Content="Mute"/>
                                <ComboBoxItem Content="Solo"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>

                    <!-- Curve Display Area -->
                    <Border Grid.Row="1" Background="#000" CornerRadius="8" BorderBrush="#3C3C3C" BorderThickness="1">
                        <Grid>
                            <!-- Timeline Grid -->
                            <Canvas Background="#0A0A0A">
                                <!-- Placeholder for automation curves -->
                                <TextBlock Text="Automation curve editor will be displayed here"
                                          Foreground="#666"
                                          FontSize="16"
                                          Canvas.Left="50" Canvas.Top="50"/>
                                <TextBlock Text="[Protocol implementation required for live automation data]"
                                          Foreground="#444"
                                          FontSize="12"
                                          Canvas.Left="50" Canvas.Top="80"/>
                            </Canvas>
                        </Grid>
                    </Border>

                    <!-- Timeline Controls -->
                    <Grid Grid.Row="2" Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Button Content="⏮" Style="{StaticResource SecondaryButton}" Padding="12,8" Margin="0,0,5,0"/>
                            <Button Content="▶" Style="{StaticResource PrimaryButton}" Padding="12,8" Margin="0,0,5,0"/>
                            <Button Content="⏸" Style="{StaticResource SecondaryButton}" Padding="12,8" Margin="0,0,5,0"/>
                            <Button Content="⏹" Style="{StaticResource SecondaryButton}" Padding="12,8" Margin="0,0,5,0"/>
                            <Button Content="⏭" Style="{StaticResource SecondaryButton}" Padding="12,8"/>
                        </StackPanel>

                        <Slider Grid.Column="1" Margin="20,0" VerticalAlignment="Center" Minimum="0" Maximum="100" Value="0"/>

                        <TextBlock Grid.Column="2" Text="00:00:00:00" FontFamily="Consolas" FontSize="16" Foreground="#0FF" VerticalAlignment="Center"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Right Panel - Tools -->
            <StackPanel Grid.Column="1">
                <!-- Edit Tools -->
                <Border Background="#2D2D30" CornerRadius="12" BorderBrush="#3C3C3C" BorderThickness="1" Padding="20" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="EDIT TOOLS" Foreground="#0078D4" FontSize="13" FontWeight="Bold"
                                  BorderBrush="#0078D4" BorderThickness="0,0,0,2" Padding="0,0,0,12" Margin="0,0,0,15"/>

                        <Button Content="Select" Style="{StaticResource PrimaryButton}" Margin="0,5"/>
                        <Button Content="Draw" Style="{StaticResource SecondaryButton}" Margin="0,5"/>
                        <Button Content="Erase" Style="{StaticResource SecondaryButton}" Margin="0,5"/>
                        <Button Content="Line" Style="{StaticResource SecondaryButton}" Margin="0,5"/>
                        <Button Content="Curve" Style="{StaticResource SecondaryButton}" Margin="0,5"/>
                    </StackPanel>
                </Border>

                <!-- Automation Mode -->
                <Border Background="#2D2D30" CornerRadius="12" BorderBrush="#3C3C3C" BorderThickness="1" Padding="20" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="AUTOMATION MODE" Foreground="#0078D4" FontSize="13" FontWeight="Bold"
                                  BorderBrush="#0078D4" BorderThickness="0,0,0,2" Padding="0,0,0,12" Margin="0,0,0,15"/>

                        <Button Content="READ" Style="{StaticResource SecondaryButton}" Margin="0,5"/>
                        <Button Content="WRITE" Style="{StaticResource PrimaryButton}" Margin="0,5"/>
                        <Button Content="UPDATE" Style="{StaticResource SecondaryButton}" Margin="0,5"/>
                        <Button Content="TOUCH" Style="{StaticResource SecondaryButton}" Margin="0,5"/>
                    </StackPanel>
                </Border>

                <!-- Snap/Grid -->
                <Border Background="#2D2D30" CornerRadius="12" BorderBrush="#3C3C3C" BorderThickness="1" Padding="20">
                    <StackPanel>
                        <TextBlock Text="SNAP / GRID" Foreground="#0078D4" FontSize="13" FontWeight="Bold"
                                  BorderBrush="#0078D4" BorderThickness="0,0,0,2" Padding="0,0,0,12" Margin="0,0,0,15"/>

                        <CheckBox Content="Snap to Grid" Foreground="White" Margin="0,5"/>
                        <CheckBox Content="Snap to Events" Foreground="White" Margin="0,5"/>

                        <TextBlock Text="Grid Size:" Style="{StaticResource FormLabel}" Margin="0,15,0,5"/>
                        <ComboBox Style="{StaticResource DarkComboBox}" SelectedIndex="2">
                            <ComboBoxItem Content="1 frame"/>
                            <ComboBoxItem Content="5 frames"/>
                            <ComboBoxItem Content="10 frames"/>
                            <ComboBoxItem Content="30 frames"/>
                            <ComboBoxItem Content="1 second"/>
                        </ComboBox>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

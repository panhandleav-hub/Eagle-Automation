<UserControl x:Class="EagleAutomation.Views.ChannelStrip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="100">

    <Border Background="#1F1F1F" BorderBrush="#3C3C3C" BorderThickness="1"
            CornerRadius="8" Padding="10" Margin="5">
        <StackPanel>
            <!-- Channel Label -->
            <TextBlock x:Name="ChannelLabel"
                      Text="CH 1"
                      Foreground="White"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,10"/>

            <!-- Switch Buttons -->
            <ToggleButton x:Name="MuteButton"
                         Content="MUTE"
                         Style="{StaticResource {x:Type ToggleButton}}"
                         Background="#3C3C3C"
                         Foreground="White"
                         BorderBrush="#555"
                         Margin="0,2"
                         Padding="8,4"
                         FontSize="10"
                         FontWeight="SemiBold"
                         Click="OnMuteClicked"/>

            <ToggleButton x:Name="SoloButton"
                         Content="SOLO"
                         Style="{StaticResource {x:Type ToggleButton}}"
                         Background="#3C3C3C"
                         Foreground="White"
                         BorderBrush="#555"
                         Margin="0,2"
                         Padding="8,4"
                         FontSize="10"
                         FontWeight="SemiBold"
                         Click="OnSoloClicked"/>

            <ToggleButton x:Name="EqButton"
                         Content="EQ"
                         Style="{StaticResource {x:Type ToggleButton}}"
                         Background="#3C3C3C"
                         Foreground="White"
                         BorderBrush="#555"
                         Margin="0,2"
                         Padding="8,4"
                         FontSize="10"
                         FontWeight="SemiBold"
                         Click="OnEqClicked"/>

            <!-- Fader Slider -->
            <Border Background="#000"
                   CornerRadius="4"
                   Margin="0,10"
                   Padding="5"
                   Height="180">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Vertical Slider -->
                    <Slider x:Name="FaderSlider"
                           Grid.Row="0"
                           Orientation="Vertical"
                           Minimum="0"
                           Maximum="100"
                           Value="75"
                           TickFrequency="10"
                           IsSnapToTickEnabled="False"
                           HorizontalAlignment="Center"
                           Width="20"
                           Margin="0,5"
                           ValueChanged="OnFaderChanged"/>

                    <!-- Level Display -->
                    <TextBlock x:Name="LevelDisplay"
                              Grid.Row="1"
                              Text="75"
                              Foreground="#00FFFF"
                              FontSize="11"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                </Grid>
            </Border>

            <!-- Automation Indicator -->
            <StackPanel x:Name="AutomationIndicator"
                       Orientation="Horizontal"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0">
                <Ellipse x:Name="AutomationLed"
                        Width="8"
                        Height="8"
                        Fill="#888"
                        Margin="0,0,4,0"/>
                <TextBlock x:Name="AutomationText"
                          Text="OFF"
                          Foreground="#888"
                          FontSize="10"/>
            </StackPanel>

            <!-- Auto Enable Button -->
            <ToggleButton x:Name="AutoButton"
                         Content="AUTO"
                         Style="{StaticResource {x:Type ToggleButton}}"
                         Background="#3C3C3C"
                         Foreground="White"
                         BorderBrush="#555"
                         Margin="0,8,0,0"
                         Padding="8,4"
                         FontSize="10"
                         FontWeight="SemiBold"
                         Click="OnAutoClicked"/>
        </StackPanel>
    </Border>
</UserControl>
